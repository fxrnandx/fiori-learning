<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns:fb="sap.ui.comp.filterbar" xmlns:f="sap.f.semantic" controllerName="br.com.gestao.fioriappreport398.controller.Lista" displayBlock="true">
      
         <m:Page id="page" title="{i18n>appTitle}">
            <m:content>
               <f:SemanticPage id="pageLista" headerPinnable="true" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false" titleAreaShrinkRatio="1:1.6:1.6">
                  <f:titleHeading>
                     <m:Title text="{i18n>headingTitle}" id="titleLista"/>
                  </f:titleHeading>
                  <f:headerContent>
                     <!--Filter Options-->
                     <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search="onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                        <fb:filterGroupItems>
                           <fb:FilterGroupItem id="productID" name="productID" label="{i18n>fgitemProduct}" groupName="Main" visibleInFilterBar="true" groupTitle="{i18n>groupTitle}">
                           <fb:control>
                           
                           
                               <m:Input placeholder="{i18n>fgitemProductPlHolder}" id="productIdInput"/>
                           
                           
                           </fb:control>
                           </fb:FilterGroupItem>

                           <fb:FilterGroupItem id="productName" name="productName" label="{i18n>fgitemNameProductTooltip}" groupName="Main" visibleInFilterBar="true" groupTitle="{i18n>groupTitle}">
                               <fb:control>
                                   <m:Input placeholder="{i18n>fgitemNameProductPlHolder}" id="productNameInput"/>
                               </fb:control>
                           </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                     </fb:FilterBar>
                  </f:headerContent>
                  <f:titleMainAction/>
                  <f:titleCustomTextActions/>
                  <f:titleCustomIconActions/>
                  <f:content>
                      <m:Table noDataText="{i18n>tbNoData}" id="productsTable" items="{path: '/Products' , parameters:{expand : 'to_cat'}}">
                          <m:items> 
                              <m:ColumnListItem press="onSelectedItem" type="Active" id="itemsList">
                              <m:cells>
                                  <sap.ui.core:Icon xmlns:sap.ui.core="sap.ui.core" src="sap-icon://product" size="3em" id="icon0"/>
                                  <m:Text text="{Productid}" id="text15"/>
                                  <m:ObjectIdentifier title="{Name}" text="{Description}" id="identifier0"/>
                                  <m:Text text="{to_cat/Description}" id="text18"/>
                                  <m:Text text="{Supplierid}" id="text19"/>
                                  <m:Text text="{Measureunit}" id="text20"/>
                                  <m:ObjectNumber id="number0" number="{ parts: [ {path: 'Price'},{path: 'Currencycode'} ], type:'sap.ui.model.type.Currency', formatOptions:{showMeasure: false} }" unit="{Currencycode}" state="Success"/>
                                  <m:ObjectStatus text="{ parts: [ {path: 'Status'}], formatter:'.productStatus'}" state="{ path:'Status', formatter:'.stateProduct'}" id="status0" icon="{ path:'Status', formatter:'.iconProduct'}" inverted="true"/>
                                  
                                 



                                  <m:Text text="{ parts: [ {path: 'Createdat'}], formatter:'.formatDate'}" id="text22"/>
                              </m:cells>
                              </m:ColumnListItem>
                          </m:items>
                          <m:columns>
                              <m:Column id="column0">
                                  <m:header>
                                      <m:Label text="{i18n>tbColumnLogo}" id="lblImage"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column1">
                                  <m:header>
                                      <m:Label text="{i18n>tbColumnProductID}" id="lblProductID"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column2" width="16em">
                                  <m:header>
                                      <m:Label text="{i18n>tbColumnDescription}" id="lblDescription"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column0_1745429174560">
                                  <m:header>
                                      <m:Text text="{i18n>tbColumnCategory}" id="text9"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column1_1745429190285" width="8em">
                                  <m:header>
                                      <m:Text text="{i18n>tbColumnSupplierID}" id="text10"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column2_1745429200411" hAlign="Center">
                                  <m:header>
                                      <m:Text text="{i18n>tbColumnMeasureUnit}" id="text11"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column3">
                                  <m:header>
                                      <m:Text text="{i18n>tbColumnPrice}" id="text12"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column4">
                                  <m:header>
                                      <m:Text text="{i18n>tbColumnStatus}" id="text13"/>
                                  </m:header>
                              </m:Column>
                              <m:Column id="column5" hAlign="Center">
                                  <m:header>
                                      <m:Text text="{i18n>tbColumnCreationDate}" id="text14"/>
                                  </m:header>
                              </m:Column></m:columns>
                            <m:headerToolbar>
                                <m:Toolbar width="100%" id="toolbar2">
                                    <m:content>
                                        <m:Button press="onRouting" text="Routing &gt; Detalhes" id="button1"/>
                                    </m:content>
                                </m:Toolbar>
                            </m:headerToolbar>
                            </m:Table>
                  </f:content>
                  <f:footerCustomActions/>
                  <f:titleSnappedContent>
                     <m:Title text="{i18n>headingTitleSnapped}" id="title0_1745288636130"/>
                  </f:titleSnappedContent>
               </f:SemanticPage>
            </m:content>
         </m:Page>
      
</mvc:View>