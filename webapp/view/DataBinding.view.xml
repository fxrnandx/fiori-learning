<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="br.com.gestao.fioriappreport398.controller.DataBinding" displayBlock="true">
  <App id="AppBinding">
  
    <Page id="pageBinding" title="{i18n>title}">
      <content>
        <Panel width="auto" expandable="true" expanded="true" id="panelHeader">
          <headerToolbar>
            <Toolbar id="toolbar1">
              <Title id="headerTitle" text="Model via serviço OData"/>
              <ToolbarSpacer id="_IDGenToolbarSpacer"/>
              <Button id="btnSettings" icon="sap-icon://settings"/>
            </Toolbar>
          </headerToolbar>

          <content>
            <List noDataText="No products Available" id="list1" items="{/Products}">
              <infoToolbar>
                <Toolbar width="100%" id="toolbar1_1744885749371">
                  <content>
                    <Text text="Informação Adicional List" id="text0"/> 
                  </content>
                </Toolbar>
              </infoToolbar>
              <items>
                <StandardListItem type="Navigation" title="{Productid}" description="{Name}" icon="sap-icon://picture" id="item0"/>
              </items>
            </List>
          </content>
        </Panel>
        <Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel0">
            <headerToolbar>
                <Toolbar id="toolbar1_1745377274821">
                    <Title id="_IDGenTitle" text="Model via arquivo JSON"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                    <Button id="_IDGenButton1" icon="sap-icon://settings"/>
                    </Toolbar>
                
            </headerToolbar>
            <content>
                <List noDataText="Drop list items here" id="list0" items="{Model_JSON_Produtos>/Products}">
                    <items>
                        <StandardListItem type="Navigation" title="{Model_JSON_Produtos>ProductName}" description="{Model_JSON_Produtos>Description}" icon="sap-icon://picture" id="item0_1745377418827"/>
                    </items>
                </List>
            </content>
            </Panel>
        <Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel0_1745378382144">
            <headerToolbar>
                <Toolbar id="toolbar1_1745378382144">
                    <Title id="_IDGenTitle1" text="Header"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer2"/>
                    <Button id="_IDGenButton2" icon="sap-icon://settings"/>
                    </Toolbar>
                
            </headerToolbar>
            <content>
                <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="formRegions">
                    <sap.ui.layout.form:content>
                        <Label text="Nome da região" id="labelNameRegions"/>
                        <Input width="100%" id="inputNameRegions" value="{Model_JSON_Regions>name}"/>

                        <Label text="Cidade / País" id="labelPlaces"/>
                        <Input width="100%" id="input2" value="{Model_JSON_Regions>companies/1/city} - {Model_JSON_Regions>companies/1/county}"/>

                        
                        <Label text="Nome Companhia" width="100%" id="label3"/>
                        <Input xmlns="sap.m" id="input0_1745379986796" value="{Model_JSON_Regions>companies/1/name}"/>

                        <Label text="Acessar Regiões" width="100%" id="labelRegions"/>
                        <Button xmlns="sap.m" text="Binding Element Regions" press="getRegion" id="button2" icon="sap-icon://add"/></sap.ui.layout.form:content>

                <sap.ui.layout.form:title>
                    <sap.ui.core:Title text="Binding Element" id="title2"/>
                </sap.ui.layout.form:title>
                </sap.ui.layout.form:SimpleForm>
                </content>
            </Panel>
      </content>
    </Page>
  </App>
</mvc:View>