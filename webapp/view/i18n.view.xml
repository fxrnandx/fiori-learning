<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="br.com.gestao.fioriappreport398.controller.i18n" displayBlock="true">
  <App id="AppI18n">
    <Page id="pageObject" title="{i18n>title}">
      <content>
       
      <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
       
          <sap.ui.layout.form:content>
       
              <sap.ui.core:Title text="{i18n>titleClientes}" id="title0"/>
       
              <Label text="{i18n>lblCliente}" id="label0"/>
       
              <Input width="100%" id="cliente" placeholder="{i18n>plholderCliente}"/>
       
              <Label text="{i18n>lblEnderecoCliente}" id="label1"/>
       
              <Input width="100%" id="endereco" placeholder="{i18n>plholderEnderecoCliente}"/>
       
              <Label text="{i18n>lblCidadeCliente}" width="100%" id="label2"/>
       
              <Input xmlns="sap.m" id="cidade" placeholder="{i18n>plholderCidadeCliente}"/>
       
              <Label text="{i18n>lblEstadoCliente}" width="100%" id="label3"/>
       
              <Input xmlns="sap.m" id="estado" placeholder="{i18n>plholderEstadoCliente}"/>
       
              <Button xmlns="sap.m" id="button0" press="enviaCadastro" icon="sap-icon://action" text="{i18n>btEnviar}"/></sap.ui.layout.form:content>
       
      </sap.ui.layout.form:SimpleForm>
       
      </content>
    </Page>
  </App>
</mvc:View>